    <text xml:lang="ita">
        <body>
            <div>
                <pb facs="#page1" n="1" xml:id="page-1"/>
                <p>Codifica lettera Bellini</p>
            </div>
            <div n="1">
                <p facs="rett1"> 
                <stamp>Timbro tagliato a metà</stamp>
                </p>
            </div>
            <div n="2">
                <salute>
                <p facs="rett2" xml:lang="fr"> 
                <stamp>Timbro di Neuvilly</stamp>
                    <lb xml:id="r2l1" n="1"/>
                    à Monsieur
                    <lb xml:id="r2l2" n="2"/>
                    Monsieur le <roleName role="count">Comte</roleName> <rs type="person">Pepoli</rs>
                    <lb xml:id="r2l3" n="3"/>
                    <address>
                        <addrLine> N°1<pc>:</pc></addrLine>
                        <addrLine>passage des petits Pères</addrLine>
                        <addrLine>à<name type="place">Paris</name></addrLine>
                    </address> 
                </p>
                </salute>
            </div>
            <div n="3">
                <head>
                <p facs="rett3">
                <stamp>Timbro francese</stamp>
                    <lb xml:id="r3l1" n="4"/>
                    <num>27</num><pc>-</pc>
                    <lb xml:id="r3l2" n="5"/>
                    Lettera del
                    <lb xml:id="r3l3" n="6"/>
                    <rs type="person">Bellini</rs> sul Duetto
                    <lb xml:id="r3l4" n="7"/>
                    del p <g ref="U+00B0">°</g><objectName>Atto dei Puritani</objectName> 
                </p>
                </head>
            </div>
            <div n="4" xml:lang="fr">
                <p facs="rett4">
                    <lb xml:id="r4l1" n="8"/>
                    <date when="AAAA-06-26"> Juin 26</date><pc>:</pc> <name type="place">Puteau</name><pc>-</pc>N<g ref="U+00B0">°</g><pc>:</pc><num type="cardinal">19</num> Bis rampe
                    <lb xml:id="r4l2" n="9"/>
                    <space extent="half the line"/>de <name type="place">Neuilly</name>
                </p>
            </div>
            <div n="5">
                <p facs="rett5"> 
                    <lb xml:id="r5l1" n="10"/>
                    Mio caro <name type="person">Carluccio</name>
                    <lb xml:id="r5l2" n="11"/>
                    Avendo steso l'intero duetto
                    <lb xml:id="r5l3" n="12"/>
                    e mancando in esso qualche
                    <lb xml:id="r5l4" n="13"/>
                    cosetta<pc>,</pc> desidererei che tu 
                    <lb xml:id="r5l5" n="14"/>
                    t'<distinct type="archaic">incommodassi</distinct> a venire 
                    <choice>
                        <sic>à</sic>
                        <corr>a</corr>
                    </choice>
                    <lb xml:id="r5l6" n="15"/>
                    <name type="place">Puteau</name> per tutto fissare<pc>,</pc> e
                    <lb xml:id="r5l7" n="16"/>
                    nell'<distinct type="archaic">istesso</distinct> tempo darmi la 
                    <lb xml:id="r5l8" n="17"/>
                    sortita di <rs type="person">Rubini</rs><pc>,</pc> se è termi<pc>=</pc>
                    <lb xml:id="r5l9" n="18" break="yes"/>
                    nata<pc>.</pc> T'aspetto in questi giorni
                    <lb xml:id="r5l10" n="19"/>
                    ed in qual'ora vorrai <pc>-</pc> Addio          
                </p>
            </div>
            <div n="6">
                <p facs="rett6">
                    <lb xml:id="r6l1" n="20"/> 
                    Il tuo <name type="person">Vincenzillo</name> </p>
            </div>
